<configuration>
    <!-- Hibernate logs to hibernate.log -->
    
    <appender name="HIBERNATE_FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/hibernate.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="HIBERNATE_SCHEMA_FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/hibernate-schema-sql.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level SCHEMA_CHANGE %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <!-- logging.level.org.hibernate.tool.schema=DEBUG -->
    <logger name="org.hibernate.tool.schema" level="DEBUG" additivity="false">
        <appender-ref ref="HIBERNATE_SCHEMA_FILE"/>
    </logger>
    <logger name="org.hibernate" level="DEBUG" additivity="false">
        <appender-ref ref="HIBERNATE_FILE"/>
    </logger>
    
    <!-- Other logs to app.log -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="com.tomcvt.brickshop.logging.StringBlockFilter">
            <blockedSubstringsList>/actuator,/js/,/outsideimages/,/css/</blockedSubstringsList>
        </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="APP_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="com.tomcvt.brickshop.logging.StringBlockFilter">
            <blockedSubstringsList>/actuator,/js/,/outsideimages/,/css/</blockedSubstringsList>
        </filter>
        <file>logs/app.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="com.tomcvt.brickshop" level="DEBUG" additivity="false">
        <appender-ref ref="APP_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>
    <logger name="org.springframework.security" level="DEBUG" additivity="false">
        <appender-ref ref="APP_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>
    <logger name="org.springframework.security.web.context.HttpSessionSecurityContextRepository" level="INFO" additivity="false"/>
    <root level="INFO">
        <appender-ref ref="APP_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>